{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "typeRoots": [
      "typings/globals",
      "typings/modules"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "typings/globals/*",
        "typings/modules/*"
      ]
    }
  },
  "include": [
    "typings/index.d.ts",
    "lib/**/*.d.ts",
    "index.d.ts"
  ]
}
